modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]

[env]
PORT = "5000"

[agent]
integrations = ["javascript_database:1.0.0", "javascript_stripe:1.0.0", "javascript_log_in_with_replit:1.0.0", "javascript_paypal:1.0.0"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Run Integration Tests"
author = 43702182
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx vitest run integration --config setup/vitest.config.ts"

[[workflows.workflow]]
name = "Run E2E Tests"
author = 43702182
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx playwright test e2e"

[[workflows.workflow]]
name = "Run Unit Tests"
author = 43702182
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx vitest run unit --config setup/vitest.config.ts"

[[workflows.workflow]]
name = "Run All Tests"
author = 43702182
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx vitest run --config setup/vitest.config.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx playwright test e2e"

[[workflows.workflow]]
name = "Run Calculator Builder Tests"
author = 43702182
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx vitest run unit/calculator-builder.test.tsx --config setup/vitest.config.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx vitest run integration/calculator-robustness.test.tsx --config setup/vitest.config.ts"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx playwright test e2e/complete-calculator-flows.spec.ts"

[[workflows.workflow]]
name = "Test Calculator Builder"
author = 43702182
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd testing && npx vitest run integration/calculator-builder-comprehensive.test.tsx --config setup/vitest.config.ts --reporter=verbose"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 43557
externalPort = 3001
